<h3><a class="btn btn-secondary" href="/user"><i class="fa fa-plus"></i> Create New</a></h3>
<h3 style="text-align: center;">User List</h3>
<table class="table table-striped">
    <thead >
        <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Work No.</th>
            <th>Home No.</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody >
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>+{{this.mobile}}</td>
            <td>+{{this.workNo}}</td>
            <td>+{{this.homeNo}}</td>
            <td>{{this.email}}</td>
            <td>
                <a href="/user/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <a href="/user/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg"
                        aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>